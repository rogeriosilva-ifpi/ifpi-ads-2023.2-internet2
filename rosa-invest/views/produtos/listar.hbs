{{#> base }}
  {{#*inline "title" }}Produtos{{/inline}}

  {{#*inline "mainContent" }}
    <h1>Produtos</h1>

    <table>
      <tr>
        <th>#</th>
        <th>Nome</th>
        <th>Disponível</th>
        <th>Taxa Juros(%)</th>
        <th>Ações</th>
      </tr>
      {{#each produtos as |produto|}}
        <tr>
          <td>{{produto.id}}</td>
          <td>{{produto.nome}}</td>
          <td>{{produto.disponivel}}</td>
          <td>{{produto.taxaRentabilidade}}</td>
          <td>
            <a href="/produtos/alternar-status?id={{produto.id}}">
              {{#if produto.disponivel }}
                Suspender
              {{else}}
                Disponibilizar
              {{/if}}
            </a>
            <a href="/produtos/remover?id={{produto.id}}">Remover</a>
          </td>
        </tr>
      {{/each}}
    </table>
  {{/inline}}

{{/base }}